{
  "name": "vocab-builder-sync",
  "displayName": "Vocab Builder Sync",
  "version": "1.0.3",
  "description": "Sync Vocab Builder data with Anki",
  "author": "Adam Hao <haozg44@gmail.com>",
  "scripts": {
    "dev": "plasmo dev",
    "build": "plasmo build",
    "build:firefox": "plasmo build --target=firefox-mv2",
    "build:chrome": "plasmo build --target=chrome-mv3",
    "build:edge": "plasmo build --target=edge-mv3",
    "package:chrome": "plasmo package --target=chrome-mv3",
    "package:firefox": "plasmo package --target=firefox-mv2",
    "package:edge": "plasmo package --target=edge-mv3"
  },
  "dependencies": {
    "@plasmohq/messaging": "^0.7.2",
    "p-limit": "^7.2.0",
    "plasmo": "0.90.5",
    "react": "18.2.0",
    "react-dom": "18.2.0"
  },
  "devDependencies": {
    "@ianvs/prettier-plugin-sort-imports": "4.1.1",
    "@types/chrome": "0.0.258",
    "@types/node": "20.11.5",
    "@types/react": "18.2.48",
    "@types/react-dom": "18.2.18",
    "@types/webextension-polyfill": "^0.12.4",
    "prettier": "3.2.4",
    "typescript": "5.3.3",
    "webextension-polyfill": "^0.12.0"
  },
  "manifest": {
    "host_permissions": [],
    "permissions": [
      "tabs",
      "notifications"
    ],
    "web_accessible_resources": [
      {
        "resources": [
          "assets/*"
        ],
        "matches": [
          "https://vocab-builder.app/*",
          "https://www.vocab-builder.app/*",
          "http://localhost/*"
        ]
      }
    ]
  }
}
